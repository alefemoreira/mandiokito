<Gerenciador>
    TelaInicial:
        BoxLayout:
            orientation: 'vertical'
            MapView:
                zoom: 11
                lat: 50.6394
                lon: 3.057

            #Label:
            #    canvas:
            #        Color:
            #            rgb: (0.0, 0.6, 0.0)

            #        Rectangle:
            #            size: self.size
            #            pos: self.pos
            #    text: "Hello"
            BoxLayout:
                orientation: 'horizontal'
                height: "45 dp"
                size_hint_y: None
                Button:
                    text: "Registrar"
                    on_release:
                        app.root.current='registrar'

                Button:
                    text: "Atualizar"
                    on_release:
                        app.root.current='atualizar'

                Button:
                    text: "Apagar"
                    on_release:
                        app.root.current='apagar'
                Button:
                    text: "Current Location"
                    #size_hint_x: 25
                    on_press: root.current_location()

    Registrar:
        name: "registrar"
        Label:
            text: "Registrar"

    Apagar:
        name: "apagar"
        Label:
            text: "Apagar"

    Atualizar:
        name: "atualizar"
        Label:
            text: "Atualizar"